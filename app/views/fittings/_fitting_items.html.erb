<section aria-labelledby="contents-title">
  <div class="bg-white dark:bg-zinc-800 shadow sm:rounded-lg sm:overflow-hidden">
    <div class="divide-y divide-gray-200 dark:divide-zinc-800">
      <div class="px-4 py-5 sm:px-6">
        <h2 id="contents-title" class="text-lg font-medium text-gray-900 dark:text-zinc-100">Contents</h2>
      </div>
      <div>
        <table class="max-w-full table-fixed divide-y divide-gray-200 dark:divide-zinc-800">
          <thead class="bg-gray-50 dark:bg-zinc-800">
            <tr>
              <th scope="col" class="w-5/6 px-4 py-2 text-left text-xs font-medium text-gray-900 dark:text-zinc-400 uppercase tracking-wider">
                Item
              </th>
              <th scope="col" class="w-1/6 px-4 py-2 text-left text-xs font-medium text-gray-900 dark:text-zinc-400 uppercase tracking-wider">
                Qty
              </th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-zinc-800 divide-y divide-gray-200 dark:divide-zinc-800">
            <% @fitting.items.includes(:type).each do |item| %>
              <tr>
                <td class="px-4 py-2 text-xs font-medium text-gray-900 dark:text-zinc-400">
                  <%= item.type.name %>
                </td>
                <td class="px-4 py-2 text-xs font-medium text-gray-900 dark:text-zinc-400">
                  <%= number_with_delimiter item.quantity %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
