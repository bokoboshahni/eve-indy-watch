<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: admin_root_path do %>Administration<% end %>
    <%= c.item href: admin_structures_path do %>Structures<% end %>
  <% end %>
<% end %>

<%= render PageHeadingComponent.new(title: 'Structures') do |c| %>
  <%= c.action do %>
    <%= render(DataTableSorterComponent.new(name: :structures, filter: @filter, session: session)) %>
  <% end %>
<% end %>

<div class="max-w-7xl mt-4 mx-auto px-4 sm:px-6 md:px-8">
  <%= render(DataTableComponent.new(name: :structures, filter: @filter, scope: @structures)) do |dt| %>
    <% dt.table do %>
      <%= render 'structures', structures: @structures, paginator: @pagy %>
    <% end %>
  <% end %>
</div>
