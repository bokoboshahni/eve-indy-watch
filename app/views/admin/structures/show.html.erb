<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: admin_root_path do %>Administration<% end %>
    <%= c.item href: admin_structures_path do %>Structures<% end %>
    <%= c.item href: admin_structure_path(@structure) do %><%= @structure.name %><% end %>
  <% end %>
<% end %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8">
  <div class="bg-white dark:bg-zinc-800 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
        <div class="ml-4 mt-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if @structure.owner %>
                <%= image_tag @structure.owner.icon_url_128, class: 'h-12 w-12', alt: '' %>
              <% else %>
                <%= image_pack_tag 'static/corporation-default.png', class: 'h-12 w-12' %>
              <% end %>
            </div>
            <div class="ml-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
                <%= @structure.name %>
              </h3>
            </div>
          </div>
        </div>
        <div class="ml-4 mt-4 flex-shrink-0 flex">
          <%= link_to edit_admin_structure_path(@structure), class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-zinc-700 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 hover:bg-gray-50 dark:hover:bg-zinc-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' do %>
            <%= heroicon 'cog', variant: :solid, options: { class: '-ml-1 mr-2 h-5 w-5' } %>
            Settings
          <% end %>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-zinc-800 px-4 py-5 sm:px-6">
    </div>
  </div>
</div>
