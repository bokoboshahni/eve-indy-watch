<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: admin_root_path do %>Administration<% end %>
    <%= c.item href: admin_alliances_path do %>Alliances<% end %>
  <% end %>
<% end %>

<%= render PageHeadingComponent.new(title: 'Alliances') do |c| %>
  <%= c.action do %>
    <%= render(DataTableSorterComponent.new(name: :alliances, filter: @filter, session: session)) %>
  <% end %>
<% end %>

<div class="max-w-7xl mt-4 mx-auto px-4 sm:px-6 md:px-8">
  <%= render(DataTableComponent.new(name: :alliances, filter: @filter, scope: @alliances)) do |dt| %>
    <% dt.table do %>
      <%= render 'alliances', alliances: @alliances, paginator: @pagy %>
    <% end %>
  <% end %>
</div>
