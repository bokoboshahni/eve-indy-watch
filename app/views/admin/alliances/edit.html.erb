<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: admin_root_path do %>Administration<% end %>
    <%= c.item href: admin_alliances_path do %>Alliances<% end %>
    <%= c.item href: admin_alliance_path(@alliance) do %><%= @alliance.name %><% end %>
  <% end %>
<% end %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 md:px-8">
  <div class="bg-white dark:bg-zinc-800 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-nowrap">
        <div class="ml-4 mt-4">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <%= image_tag @alliance.icon_url_128, class: 'h-12 w-12', alt: '' %>
            </div>
            <div class="ml-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
                <%= @alliance.name %>
              </h3>
            </div>
          </div>
        </div>
        <div class="ml-4 mt-4 flex-shrink-0 flex">
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-zinc-800 px-4 py-5 sm:px-6">
      <%= form_with model: @alliance, url: admin_alliance_path do |f| %>
        <div class="space-y-8 divide-y divide-gray">
          <div class="space-y-8 divide-y divide-gray">
            <div>
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
                  Markets
                </h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
                  Settings used for alliance market monitoring.
                </p>
              </div>
              <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <%= f.label :main_market_id, 'Alliance market', class: 'block text-sm font-medium text-gray-700 dark:text-zinc-300' %>
                  <div class="mt-1">
                    <%= f.collection_select :main_market_id, @alliance.markets.order(:name), :id, :name, { prompt: true }, { class: 'shadow-sm focus:ring-indigo-500 dark:focus:ring-sky-500 focus:border-indigo-500 dark:focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-zinc-700 rounded-md' } %>
                  </div>
                </div>
              </div>
              <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <%= f.label :appraisal_market_id, 'Appraisal market', class: 'block text-sm font-medium text-gray-700 dark:text-zinc-300' %>
                  <div class="mt-1">
                    <%= f.collection_select :appraisal_market_id, Market.where(owner_id: @alliance.id).or(Market.where(owner_id: nil)).order(:name), :id, :name, { prompt: true }, { class: 'shadow-sm focus:ring-indigo-500 dark:focus:ring-sky-500 focus:border-indigo-500 dark:focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-zinc-700 rounded-md' } %>
                  </div>
                </div>
              </div>
            </div>
            <div class="pt-8">
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
                  Synchronization
                </h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
                  What to synchronize for the alliance.
                </p>
              </div>
              <div class="mt-1">
                <fieldset>
                  <div class="mt-4 space-y-4">
                    <div class="relative flex items-start">
                      <div class="flex items-center h-5">
                        <%= f.check_box :zkb_sync_enabled, class: 'focus:ring-indigo-500 dark:focus:ring-sky-500 h-4 w-4 text-indigo-600 dark:text-sky-600 border-gray-300 dark:border-zinc-700 rounded' %>
                      </div>
                      <div class="ml-3 text-sm">
                        <%= f.label :zkb_sync_enabled, 'Killmails (zKillboard)', class: 'font-medium text-gray-700 dark:text-zinc-300' %>
                        <p class="text-gray-500 dark:text-zinc-500">All killmails returned for the alliance from zKillboard. Synchronized every 5 minutes.</p>
                      </div>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
            <div>
              <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
                  API Access
                </h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-zinc-500">
                  Settings used to make API requests to the EVE API on behalf of the alliance.
                </p>
              </div>
              <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-3">
                  <%= f.label :api_corporation_id, 'API corporation', class: 'block text-sm font-medium text-gray-700 dark:text-zinc-300' %>
                  <div class="mt-1">
                    <%= f.collection_select :api_corporation_id, @alliance.corporations.order(:name), :id, :name, { prompt: true }, { class: 'shadow-sm focus:ring-indigo-500 dark:focus:ring-sky-500 focus:border-indigo-500 dark:focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-zinc-700 rounded-md' } %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="pt-5">
            <div class="flex justify-end">
              <%= link_to 'Cancel', admin_alliance_path(@alliance), class: 'bg-white py-2 px-4 border border-gray-300 dark:border-zinc-700 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-zinc-300 hover:bg-gray-50 dark:hover:bg-zinc-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
              <%= f.submit 'Save', class: 'ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 dark:bg-sky-600 hover:bg-indigo-700 dark:hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
