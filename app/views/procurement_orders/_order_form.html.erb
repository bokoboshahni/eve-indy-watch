<%= form_with model: order, url: order.persisted? ? procurement_order_path(order) : procurement_orders_path, data: { turbo: false, controller: 'nested-form order', order_order_value: order.id } do |f| %>
  <div class="space-y-8 divide-y divide-gray">
    <div class="space-y-2 divide-y divide-gray">
      <%= render 'order_fields', f: f %>
    </div>
    <div class="pt-5">
      <% if order.persisted? %>
        <div class="flex justify-end items-center">
          <div>
            <%= f.submit 'Save as Draft', class: 'cursor-pointer inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 dark:bg-sky-600 hover:bg-indigo-700 dark:hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
            <%= f.submit 'Publish', class: 'ml-2 cursor-pointer inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500' %>
          </div>
        </div>
      <% else %>
        <div class="flex justify-between items-center">
          <div>
            <%= link_to 'Cancel', procurement_orders_path, class: 'bg-white dark:bg-zinc-800 py-2 px-4 border border-gray-300 dark:border-zinc-700 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-zinc-300 hover:bg-gray-50 dark:hover:bg-zinc-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
          </div>
          <div>
            <%= f.submit 'Save as Draft', class: 'ml-2 cursor-pointer inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 dark:bg-sky-600 hover:bg-indigo-700 dark:hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
            <%= f.submit 'Publish', class: 'ml-2 cursor-pointer inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
