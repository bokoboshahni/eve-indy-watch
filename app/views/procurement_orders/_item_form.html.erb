<li class="nested-form-wrapper"
  data-new-record="<%= f.object.new_record? %>"
  data-controller="autocomplete order-item" data-autocomplete-url-value="<%= autocomplete_market_types_path %>" data-autocomplete-min-length-value="3"
>
  <% item = f.object %>
  <% show_item = item.persisted? || (item.type_id && item.errors.any?) %>
  <div class="flex-1 flex flex-col py-3 <%= 'hidden' if show_item %>" data-order-item-target="autocomplete">
    <div class="flex items-center justify-between space-x-3">
      <div class="grow relative rounded-md shadow-sm">
        <%= f.label :type_id, 'Item', class: 'sr-only' %>
        <%= search_field_tag :type_id_autocomplete, '', placeholder: 'Search items by name', class: 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pr-10 sm:text-xs border-gray-300 rounded-md', data: { autocomplete_target: 'input' } %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <%= heroicon 'search', variant: :outline, options: { class: 'h-5 w-5 text-gray-400' } %>
        </div>
        <ul class="absolute z-10 mt-1 w-full bg-white shadow-lg max-h-56 rounded-md py-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none sm:text-sm" tabindex="-1" role="listbox" aria-labelledby="listbox-label" aria-activedescendant="listbox-option-3"
          data-autocomplete-target="results">
        </ul>
      </div>
      <div>
        <button type="button" class="-m-2.5 bg-white p-2.5 flex items-center justify-center text-gray-400 hover:text-gray-500"
          data-action="nested-form#remove"
        >
          <span class="sr-only">Remove</span>
          <%= heroicon 'trash', variant: :solid, options: { class: 'h-5 w-5' } %>
        </button>
      </div>
    </div>
  </div>

  <div class="flex py-3 <%= 'hidden' unless show_item %>" data-order-item-target="item">
    <div class="flex-shrink-0">
      <% if show_item %>
        <%= render(TypeIconComponent.new(type: item.type, classes: 'w-8 h-8 rounded-md object-center object-cover')) %>
      <% else %>
        <img src="" alt="" class="w-8 h-8 rounded-md object-center object-cover" data-order-item-target="icon">
      <% end %>
    </div>

    <div class="ml-4 flex-1 flex flex-col justify-between sm:ml-6">
      <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
        <div>
          <div class="flex justify-between">
            <h3 class="text-sm font-medium text-gray-700" data-order-item-target="name"><%= item.name if show_item %></h3>
          </div>
          <div class="mt-1 flex text-sm">
            <p class="text-gray-500" data-order-item-target="category"><%= item.category_name if show_item %></p>

            <p class="ml-4 pl-4 border-l border-gray-200 text-gray-500" data-order-item-target="group"><%= item.group_name if show_item %></p>
          </div>
          <p class="mt-1 text-sm font-medium text-gray-900"><span data-order-item-target="subtotal"><%= number_to_isk(item.subtotal) if show_item %></span> ISK</p>
          <%= hidden_field_tag :item_subtotal, show_item ? item.subtotal : '', data: { order_item_target: 'subtotalField', order_target: 'itemSubtotal', action: 'change->order#calculateTotal' } %>
        </div>

        <div class="mt-4 sm:mt-0 flex items-center">
          <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
            <%= f.label :quantity_required, 'Quantity', class: 'absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900' %>
            <%= f.number_field :quantity_required, min: 0, step: 1, class: 'block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm', data: { order_item_target: 'quantity', action: 'input->order-item#calculateTotal' } %>
          </div>

          <div class="ml-2 relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
            <%= f.label :price, 'Unit Price', class: 'absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900' %>
            <%= f.number_field :price, min: 0, step: 0.01, class: 'block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm', data: { order_item_target: 'price', action: 'input->order-item#calculateTotal' } %>
          </div>
        </div>
      </div>

      <div class="mt-4 flex-1 flex items-end justify-between">
        <p class="flex items-center text-sm text-gray-700 space-x-2">
          <% market_name = main_alliance.appraisal_market_name %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
            <span class=font-medium"><%= market_name %> Sell:</span>&nbsp;<span data-order-item-target="sellPrice"><%= number_to_isk(item.type.market_sell_price(main_alliance.appraisal_market)) if show_item %></span>
          </span>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
            <span class=font-medium"><%= market_name %> Buy:</span>&nbsp;<span data-order-item-target="buyPrice"><%= number_to_isk(item.type.market_buy_price(main_alliance.appraisal_market)) if show_item %></span>
          </span>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
            <span class=font-medium"><%= market_name %> Split:</span>&nbsp;<span data-order-item-target="splitPrice"><%= number_to_isk(item.type.market_split_price(main_alliance.appraisal_market)) if show_item %></span>
          </span>
        </p>
        <div class="ml-4">
          <button type="button" class="-m-2.5 bg-white p-2.5 flex items-center justify-center text-gray-400 hover:text-gray-500"
            data-action="nested-form#remove"
          >
            <span class="sr-only">Remove</span>
            <%= heroicon 'trash', variant: :solid, options: { class: 'h-5 w-5' } %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <%= f.hidden_field :_destroy %>
  <%= f.hidden_field :type_id, data: { autocomplete_target: 'hidden', order_item_target: 'type' } %>
</li>
