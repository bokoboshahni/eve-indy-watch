<% content_for :breadcrumbs do %>
  <%= render(BreadcrumbsComponent.new) do |c| %>
    <%= c.item href: procurement_orders_path do %>Procurement Orders<% end %>
    <%= c.item href: history_procurement_orders_path do %>History<% end %>
  <% end %>
<% end %>

<%= render PageHeadingComponent.new(title: 'Procurement Orders') do |c| %>
  <%#= c.action do %>
    <%#= render(DataTableSorterComponent.new(name: :orders, filter: @filter, session: session)) %>
  <%# end %>

  <% if policy(ProcurementOrder).new? %>
    <% c.action do %>
      <%= render(ActionButtonComponent.new(href: new_procurement_order_path, margin: 'ml-2').with_content('New order')) %>
    <% end %>
  <% end %>

  <% c.action do %>
    <%= link_to 'Order dashboard', procurement_orders_path, class: 'ml-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 dark:text-sky-700 bg-indigo-100 dark:bg-sky-100 hover:bg-indigo-200 dark:hover:bg-sky-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-sky-500' %>
  <% end %>
<% end %>

<div class="max-w-7xl mt-4 mx-auto px-4 sm:px-6 md:px-8">
  <%= render 'orders_history', orders: @orders, paginator: @pagy %>
</div>
