<% if flash.any? %>
  <div class="max-w-7xl mx-auto">
    <div data-controller="alert" class="pt-6">
      <% if flash[:success].present? %>
        <div class="rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <%= heroicon 'check-circle', variant: :solid, options: { class: 'h-5 w-5 text-green-400' } %>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                <%= flash[:success] %>
              </p>
            </div>
            <div class="ml-auto pl-3">
              <div class="-mx-1.5 -my-1.5">
                <button data-action="alert#close" type="button" class="inline-flex bg-green-50 rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-50 focus:ring-green-600">
                  <span class="sr-only">Dismiss</span>
                  <%= heroicon 'x', variant: :solid, options: { class: 'h-5 w-5' } %>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% elsif flash[:error].present? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <%= heroicon 'x-circle', variant: :solid, options: { class: 'h-5 w-5 text-red-400' } %>
            </div>
            <div class="ml-3">
              <% if errors.present? %>
                <h3 class="text-sm font-medium text-red-800"><%= flash[:error] %></h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc pl-5 space-y-1">
                    <% errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% else %>
                <p class="text-sm font-medium text-red-800">
                  <%= flash[:error] %>
                </p>
              <% end %>
            </div>
            <div class="ml-auto pl-3">
              <div class="-mx-1.5 -my-1.5">
                <button data-action="alert#close" type="button" class="inline-flex bg-red-50 rounded-md p-1.5 text-red-500 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-green-50 focus:ring-red-600">
                  <span class="sr-only">Dismiss</span>
                  <%= heroicon 'x', variant: :solid, options: { class: 'h-5 w-5' } %>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
