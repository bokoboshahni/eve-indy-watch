<div class="mt-4 <%= width_class_name %> mx-auto px-4 sm:px-6 md:px-8">
  <div class="pb-5 border-b border-gray-200 dark:border-zinc-800 sm:flex sm:items-center sm:justify-between">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-zinc-100">
        <%= title %>
      </h3>
      <% if inline_tabs %>
        <div class="mt-4 sm:mt-0 sm:ml-10">
          <nav class="-mb-px flex space-x-8">
            <% inline_tabs.each do |tab| %>
              <%= tab %>
            <% end %>
          </nav>
        </div>
      <% end %>
      <% if description %>
        <p class="mt-2 max-w-4xl text-sm text-gray-500 dark:text-zinc-500"><%= description %></p>
      <% end %>
    </div>
    <div class="mt-3 flex sm:mt-0 sm:m1-4">
      <%= sorter %>
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  </div>
</div>
