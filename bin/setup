#!/usr/bin/env ruby
# frozen_string_literal: true

require 'fileutils'

APP_ROOT = File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

FileUtils.chdir APP_ROOT do
  puts '== Installing Ruby dependencies =='
  system! 'docker-compose run --rm web bundle install'

  puts "\n== Installing Yarn dependencies =="
  system! 'docker-compose run --rm web yarn install'

  puts "\n== Preparing database =="
  system! 'docker-compose run --rm web bin/rails db:prepare sde:download sde:import'

  puts "\n== Starting application server =="
  system! 'docker-compose up -d'
end
